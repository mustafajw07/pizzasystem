<%- include ('partials/header') %>

<section class="cart py-5">
    <div class="empty-cart">
        <div class="container">
            <div id="cart-header">
                <h1>Cart Empty</h1>
            <p>
                You probably haven't ordered a pizza yet.<br>
                To Order a pizza , go to the main page.
            </p>
            </div>
            <img class="w-50 p-3 img-responsive center-block d-block mx-auto" src="/img/empty-cart.png" alt="empty-cart">
           <div class="text-center">
            <a href="/" class="btn btn-outline-warning mt-3 mb-5 fw-bold rounded-pill" role="button">Go back</a>  
           </div>
        </div>
    </div>
    <div class="order container mx-auto w-50">
        <div class="text-center pb-3">
            <h2 class="fw-bold ml-4">Order Summary</h2>
            <hr>
        </div>
        <!-- List -->
        <div class="pizza-list">
            <div class="d-flex text-center my-5">
                <img style="width: 10%;" src="/img/pizza.png" alt="">
                <div class="flex-grow-1 ml-4">
                    <h4>Marina</h4>
                    <span>MEDIUM</span>
                </div>
                <span class="flex-grow-1">1 Pcs</span>
                <span class="flex-grow-1 fw-bold">300</span>
            </div>
        </div>
        <div class="pizza-list">
            <div class="d-flex text-center my-5">
                <img style="width: 10%;" src="/img/pizza.png" alt="">
                <div class="flex-grow-1 ml-4">
                    <h4>Marina</h4>
                    <span>MEDIUM</span>
                </div>
                <span class="flex-grow-1">1 Pcs</span>
                <span class="flex-grow-1 fw-bold">300</span>
            </div>
        </div>
        <div class="pizza-list">
            <div class="d-flex text-center my-5">
                <img style="width: 10%;" src="/img/pizza.png" alt="">
                <div class="flex-grow-1 ml-4">
                    <h4>Marina</h4>
                    <span>MEDIUM</span>
                </div>
                <span class="flex-grow-1">1 Pcs</span>
                <span class="flex-grow-1 fw-bold">300</span>
            </div>
        </div>
        <hr>
        <div class="text-end py-2">
            <div>
                <span class="fw-bold fs-5">Total Amount: </span>
                <span class="amount fw-bold fs-4">300</span>
            </div>

            <!-- Address -->
            <div>
                <form action="" class="mt-3">
                    <input class="w-50 p-2 mb-2" type="text" placeholder="Phone Number">
                    <input class="w-50 p-2" type="text" placeholder="Address">
                   <div>
                    <button type="submit" class="btn btn-outline-warning mt-3 mb-5 fw-bold rounded-pill">Order Now</button> 
                    <a href="/login" class="btn btn-outline-success mt-3 mb-5 fw-bold rounded-pill" role="button">Login</a>
                   </div>
                </form>
            </div>
        </div>
    </div>
</section>

</body>
</html>